<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: [1, .4]
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: 'Фанпласт помошник'
            font_size: 30
        
        Button:
            text: 'Расчитать время'
            background_color: [.39, .67, .82, 1]
            size_hint: [.8, .6]
            pos_hint:{'center_x': 0.5,}
            font_size: '25sp'
            on_press: root.manager.current = 'modes'


<ScheduleModesScreen>:
    hour_input: hour
    minute_input: minute
    check_w: winter

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: [1, 1]
        
        BoxLayout:
            spacing: 5
            padding: 15
            size_hint: [1, 1]
            orientation: 'vertical'

            BoxLayout:
                pos_hint:{'center_x': .5, 'top': .95}
                size_hint: [1, .5]
                spacing: 10

                TextInput:
                    id: hour
                    multiline: False
                    size_hint: [0.4, 0.3]
                    font_size: '20sp'
                    pos_hint:{'center_x': .42, 'top': .95}
                    
                Label:
                    text: ':'
                    font_size: '26sp'
                    size_hint: [0.01, 0.3]
                    pos_hint:{'center_x': .5, 'top': .95}
                    
                TextInput:
                    id: minute
                    multiline: False
                    size_hint: [0.4, 0.3]
                    font_size: '20sp'
                    pos_hint:{'center_x': .58, 'top': .95}

            ToggleButton:
                id: winter
                text: 'Зимнее'
                group: 'season'
                size_hint: [1, 0.2]
                font_size: '25sp'
                pos_hint:{'center_x': .5,}
            ToggleButton:
                text: 'Летнее'
                group: 'season'
                size_hint: [1, 0.2]
                font_size: '25sp'
                pos_hint:{'center_x': .5,}
            
            Button:
                text: 'Выбрать размер'
                background_color: [.39, .67, .82, 1]
                size_hint: [1, 0.2]
                font_size: '25sp'
                pos_hint:{'center_x': .5,}
                on_press: root.get_size_plate()
        
            Button:
                text: 'Расчитать время в ручную'
                background_color: [.13, .78, 0, 1]
                size_hint: [1, 0.2]
                font_size: '25sp'
                pos_hint:{'center_x': .5,}
                on_press: root.manager.current = 'manual_modes'

            Button:
                text: 'Выход'
                background_color: [.96, .19, .19, 1]
                size_hint: [1, 0.2]
                font_size: '25sp'
                pos_hint:{'center_x': .5,}
                on_press: root.manager.current = 'main'


<ScheduleModesScreenManual>:
    inp_heat: heat
    inp_pressing: pressing
    inp_air: air
    inp_water: water
    hour_input: hour
    minute_input: minute

    BoxLayout:
        orientation: 'vertical'
        padding: 25
        spacing: 10
        pos_hint:{'center_x': .5, 'center_y': .5}

        Label:
            text: 'Часы'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: hour
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'
        
        Label:
            text: 'Минуты'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: minute
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'

        Label:
            text: 'Прогрев'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: heat
            text: '20'
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'
        
        Label:
            text: 'Пресование'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: pressing
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'
        
        Label:
            text: 'Воздушное'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: air
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'
        
        Label:
            text: 'Водяное'
            size_hint: [1, 0.1]
            halign: 'left'
            valign: 'middle'
            font_size: '25sp'
        TextInput:
            id: water
            multiline: False
            size_hint: [1, 0.2]
            font_size: '20sp'

        Button:
            text: 'Расчитать'
            background_color: [.13, .78, 0, 1]
            size_hint: [1, 0.2]
            font_size: '25sp'
            on_press: root.get_manual_mode()

        Button:
            text: 'Выход'
            background_color: [.96, .19, .19, 1]
            size_hint: [1, 0.2]
            font_size: '25sp'
            on_press: root.manager.current = 'main'
